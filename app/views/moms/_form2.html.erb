<%= form_with(model: mom) do |form| %>
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-7">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body">         
            
            <hr class="mx-n3">
            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
                <h6 class="mb-0">Venue</h6>
              </div>
              <div class="col-md-9 pe-5">
                  <%= form.text_field :venue %>
              </div>
            </div>

            <hr class="mx-n3">
            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">
                <h6 class="mb-0">Report</h6>
              </div>
              <div class="col-md-9 pe-7">
                  <%= form.text_area :report , class: "form-control", rows: 5 %>
              </div>
            </div>

            <hr class="mx-n3">
            <div class="px-5 py-4">
              <%= form.submit "Update" ,  class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</br>
<%end%>